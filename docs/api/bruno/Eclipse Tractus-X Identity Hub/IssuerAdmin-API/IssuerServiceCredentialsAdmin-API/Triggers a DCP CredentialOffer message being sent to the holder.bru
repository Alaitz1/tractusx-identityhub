meta {
  name: Triggers a DCP CredentialOffer message being sent to the holder.
  type: http
  seq: 1
}

post {
  url: {{ISSUER_ADMIN_PATH}}/v1alpha/participants/{{PARTICIPANT_CONTEXT_ID}}/credentials/offer
  body: json
  auth: apikey
}

auth:apikey {
  key: X-Api-Key
  value: {{API_KEY}}
  placement: header
}

body:json {
  {
    "credentials": [
      "string"
    ],
    "holderId": "string"
  }
}
