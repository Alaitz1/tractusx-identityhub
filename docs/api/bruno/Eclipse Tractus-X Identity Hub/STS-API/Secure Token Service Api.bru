meta {
  name: Secure Token Service Api
  type: http
  seq: 1
}

post {
  url: {{STS_PATH}}/token
  body: formUrlEncoded
  auth: apikey
}

auth:apikey {
  key: X-Api-Key
  value: {{API_KEY}}
  placement: header
}

body:form-urlencoded {
  grant_type: client_credentials
  client_id: super-user
  audience: super-user
  client_secret: {{API_KEY}}
}
